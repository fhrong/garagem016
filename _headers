# Corrigir content-type para fontes
/assets/fonts/*.woff2
  Content-Type: font/woff2
  Cache-Control: public, max-age=31536000

/assets/fonts/*.woff
  Content-Type: font/woff
  Cache-Control: public, max-age=31536000

# Cache mais longo para imagens, css e js
/assets/imagens/*.(png|jpg|jpeg|webp|svg)
/css/*.css
/js/*.js
  Cache-Control: public, max-age=31536000

# Corrigir content-type e cache dos sitemaps
/sitemap.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=0

/sitemap-paginas.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=0

/sitemap-imagens.xml
  Content-Type: application/xml
  Cache-Control: public, max-age=0
